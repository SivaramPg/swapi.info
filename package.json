{
	"name": "swapi-reborn",
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"postbuild": "next-sitemap && bun run scripts/generate-redirects.ts",
		"start": "next start",
		"prepare": "husky"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"clsx": "^2.1.1",
		"next": "^16.1.3",
		"next-sitemap": "^4.2.3",
		"next-themes": "^0.4.6",
		"posthog-js": "^1.327.0",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"use-clipboard-copy": "^0.2.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "^1.3.6",
		"@types/node": "^25.0.9",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"shiki": "^3.21.0",
		"tailwindcss": "^4.1.18",
		"typescript": "5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --no-errors-on-unmatched"
		]
	}
